<% layout("/layouts/boilerplate") %>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN%>";
  const listing = <%-JSON.stringify(listing) %>;
</script>

<div class="row justify-content-center mt-3">
  <div class="col-7">
    <!-- Listing Title -->
    <h3 class="mt-3 text-center"><%= listing.title %></h3>

    <!-- Listing Card -->
    <div class="card listing-card mb-4 mx-auto" style="max-width: 500px">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing_image"
      />
      <div class="card-body">
        <p class="card-text"><i>Owned by: <%= listing.owner.username %></i></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">&#8377;<%= listing.price.toLocaleString("en-IN") %>/Night</p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>

    <!-- Conditional Edit/Delete Buttons -->
    <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
      <div class="mb-4 text-center">
        <div class="d-flex justify-content-center gap-2">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark anc-btn">Edit</a>
          <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
            <button class="btn btn-dark">Delete</button>
          </form>
        </div>
      </div>
    <% } %>

    <!-- Leave a Review Form -->
    <% if(currUser) { %>
      <div class="row justify-content-center mb-4">
        <div class="col-8">
          <h4 class="mb-3">Leave a Review</h4>
          <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
            <div class="mb-3">
              <label for="rating" class="form-label">Rating</label>
              <fieldset class="starability-slot mb-3">
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
            </div>
            <div class="mb-3">
              <label for="comment" class="form-label">Add Comment</label>
              <textarea name="review[comment]" id="comment" cols="20" rows="8" class="form-control" required></textarea>
              <div class="invalid-feedback">Please add some comments for review</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
          </form>
        </div>
      </div>
    <% } %>

    <!-- All Reviews Section -->
    <% if(listing.reviews.length > 0) { %>
      <div class="row justify-content-center mb-5">
        <div class="col-8">
          <h5 class="mb-3"><b>All Reviews</b></h5>
          <div class="row">
            <% for (const review of listing.reviews) { %>
              <div class="col-12 col-md-6 mb-3">
                <div class="card h-100">
                  <div class="card-body">
                    <h5 class="card-title mb-2">@<%= review.author.username %></h5>
                    <p class="starability-result card-text mb-2" data-rating="<%= review.rating %>"></p>
                    <p class="card-text mb-2"><%= review.comment %></p>
                  </div>
                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                        method="POST" class="mb-2 ms-1">
                    <button class="btn btn-sm btn-dark">Delete</button>
                  </form>
                </div>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Map Section -->
    <div class="row justify-content-center mb-3">
      <h3 class="row justify-content-center">Where You'll be</h3>
      <div id="map" style="height: 300px;"></div>
    </div>
  </div>
</div>

<script src="/js/map.js"></script>
